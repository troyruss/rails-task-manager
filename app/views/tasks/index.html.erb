<div class="container mt-4">
  <div class="mb-3">
    <h1>My tasks</h1>
  </div>
    <%= link_to "Add a task",
      tasks_new_path, class: "btn btn-primary mb-2" %>
  <div class="row">
    <% @tasks.each do |task| %>
    <div class="col-6 col-lg-3">
      <div class="shadow rounded p-3 my-3">
        <div class="d-flex">
        <h3><%= task.title %></h3>
          <div>
            <% if task.completed? %>
              <h4 class="far fa-check-square pl-4 pt-2"> </h4>
            <% else %>
              <h4 class="far fa-square pl-4 pt-2"></h4>
            <% end %>
          </div>
        </div>
        <%= link_to "Details", task_path(task) %>
        <div class="my-2">
          <%= link_to "Delete #{task.title}",
            task_path(task),
            class: "btn-sm btn-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
